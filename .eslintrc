{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },

  "rules": {
    "semi": ["error", "always"],
    "no-var": ["error"],
    "no-unused-vars": ["error", {
      "varsIgnorePattern": "[rR]eact"
    }],
  }
}
