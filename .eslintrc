{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },

  "plugins": [
    "react",
  ],

  "rules": {
    "semi": ["error", "always"],
    "no-var": ["error"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
  },
}
